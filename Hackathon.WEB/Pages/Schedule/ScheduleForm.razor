<EditForm Model="Schedule" OnSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <div class="mb-3">
        <label>Fecha del Evento:</label>
        <InputDate class="form-control" @bind-Value="Schedule.EventDate" />
    </div>

    <div class="mb-3">
        <label>Actividad:</label>
        <InputText class="form-control" @bind-Value="Schedule.Activity" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</EditForm>

@code {
    [Parameter] public Schedule Schedule { get; set; } = new();
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback ReturnAction { get; set; }
}
