<EditForm Model="@Evaluation" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Puntuación:</label>
        <InputNumber class="form-control" @bind-Value="Evaluation.Score" />
    </div>

    <div class="mb-3">
        <label>Comentarios:</label>
        <InputTextArea class="form-control" @bind-Value="Evaluation.Feedback" />
    </div>

    <div class="mb-3">
        <label>Fecha de Evaluación:</label>
        <InputDate class="form-control" @bind-Value="Evaluation.EvaluationDate" />
    </div>

    <div class="mb-3">
        <label>ID del Proyecto:</label>
        <InputNumber class="form-control" @bind-Value="Evaluation.ProjectId" />
    </div>

    <div class="mb-3">
        <label>ID del Mentor:</label>
        <InputNumber class="form-control" @bind-Value="Evaluation.MentorId" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</EditForm>

@code {
    [Parameter] public Evaluation Evaluation { get; set; } = new();
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback ReturnAction { get; set; }
}
