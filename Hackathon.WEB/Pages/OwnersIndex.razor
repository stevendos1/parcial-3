@page "/owners"
@using Hackathon.Shared.Entities
@using Hackathon.WEB.Repositories
@using Hackathon.WEB.Shared

@inject IRepository repository 

<h1>OwnersIndex</h1>

<div class="mb-3">
    <a class="btn btn-primary" href="/owners/Create">New Owner</a>
</div>

<GenericList MyList="Owners">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Document</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Fixed Phone</th>
                    <th>Cell Phone</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var owner in Owners!)
                {
                    <tr>
                        <td>@owner.Document</td>
                        <td>@owner.FirstName</td>
                        <td>@owner.LastName</td>
                        <td>@owner.FixedPhone</td>
                        <td>@owner.CellPhone</td>
                        <td>@owner.Address</td>
                        <td>
                            <a class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>

@code {
    public List<Owner> Owners { get; set; }

    protected async override Task OnInitializedAsync()
    {
        var responseHttp = await repository.Get<List<Owner>>("/api/owners");
        Owners = responseHttp.Response!;
    }
}
